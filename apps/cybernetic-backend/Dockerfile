# Run the container with `docker run -p 3000:3000 -t cybernetic-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cybernetic-backend && \
          adduser --system -G cybernetic-backend cybernetic-backend

COPY apps/cybernetic-backend/dist cybernetic-backend/
RUN chown -R cybernetic-backend:cybernetic-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cybernetic-backend --omit=dev -f install

CMD [ "node", "cybernetic-backend" ]
